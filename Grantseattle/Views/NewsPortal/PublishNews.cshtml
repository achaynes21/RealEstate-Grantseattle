@model InventoryERP.Models.EditNewsPortal

@{
    ViewBag.Title = "PublishNews";
    Layout = "~/Views/Shared/_SubLayout.cshtml";
}

<section class="container">
    <section class="panel panel-default">
        <div class="panel-heading">
            <h1 class="page-title">News Portal</h1>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("PublishNews", "NewsPortal",FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Heading, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Heading, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Heading" } })
                            @Html.ValidationMessageFor(model => model.Heading)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Source, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Source, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Source or Website Url" } })
                            @Html.ValidationMessageFor(model => model.Source)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NewsDescription, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.NewsDescription, 10, 20, new { @class = "form-control", @placeholder = "Enter News" })
                            @*@Html.EditorFor(model => model.NewsDescription)*@
                            @Html.ValidationMessageFor(model => model.NewsDescription)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.UploadImage, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.UploadImage, new { @class = "form-control", @placeholder = "Upload Here", type = "file"  })
                            @Html.ValidationMessageFor(model => model.UploadImage)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-10">
                            <input type="submit" value="Publish" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>

    </section>
</section>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
